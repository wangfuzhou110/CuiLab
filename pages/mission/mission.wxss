/* pages/mission/mission.wxss */

.container{
  height: 90vh;
  display: flex;
  flex-direction: column; 
  padding: 0px;
  background: #f5f5f5
}
.create {
  width: 100%;
  position: fixed;
  bottom: 0px;
  height: 10vh;
  color: white;
  background-color: pink;
}

.missioncontainer {
  display: flex;
  margin: 10px 20px 10px 10px;
  height: 25vh;
  box-sizing: border-box;
  padding: 5px;
  box-shadow: 5px 5px 5px 5px #e4e4e4;
  border-radius: 5%;
  justify-content: flex-start
}

.content-container {
  width: 60%;
  border-right: 1px solid #e4e4e4;
  height: 18vh;
}
.info-container {
  width: 30%;
  flex-direction: column;
  padding: 0px 5px 0px 5px;
  justify-content: space-around;
}


.info-container .employer {
  font-size: 13px
}
.info-container .employee {
  font-size: 13px
}
 
.info-container .employee {
  font-size: 13px
}
.info-container .date{
  font-size: 13px
}

